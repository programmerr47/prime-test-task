<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_big"
        android:layout_gravity="left"
        android:orientation="vertical">

        <com.github.programmerr47.primetesttask.representation.views.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_level_label"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            app:fontName="Roboto-Bold.ttf"/>

        <com.github.programmerr47.primetesttask.representation.views.CustomFontTextView
            android:id="@+id/level_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12"
            android:textSize="17sp"
            android:textColor="@color/secondary_text"
            app:fontName="Roboto-Regular.ttf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big"
            android:orientation="vertical">

            <com.github.programmerr47.primetesttask.representation.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_stg_label"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                app:fontName="Roboto-Bold.ttf"/>

            <com.github.programmerr47.primetesttask.representation.views.CustomFontTextView
                android:id="@+id/stg_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1000"
                android:textSize="17sp"
                android:textColor="@color/secondary_text"
                app:fontName="Roboto-Regular.ttf"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big"
            android:orientation="vertical">

            <com.github.programmerr47.primetesttask.representation.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_spc_label"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                app:fontName="Roboto-Bold.ttf"/>

            <com.github.programmerr47.primetesttask.representation.views.CustomFontTextView
                android:id="@+id/spc_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="26"
                android:textSize="17sp"
                android:textColor="@color/secondary_text"
                app:fontName="Roboto-Regular.ttf"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:background="#D2D2D2"/>

</FrameLayout>